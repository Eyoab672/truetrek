<nav class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to root_path, class: "navbar-logo" do %>
      <p>TrueTrek</p>
    <% end %>

    <% if user_signed_in? %>
      <!-- Mobile Top Right Icons -->
      <div class="navbar-mobile-icons d-flex d-md-none">
        <%= link_to conversations_path, class: "mobile-icon-link" do %>
          <i class="fa-regular fa-paper-plane"></i>
          <% unread_dm = current_user.unread_messages_count + current_user.pending_message_requests_count %>
          <% if unread_dm > 0 %>
            <span class="mobile-icon-badge"><%= unread_dm %></span>
          <% end %>
        <% end %>
        <%= link_to notifications_path, class: "mobile-icon-link" do %>
          <i class="fa-regular fa-heart"></i>
          <% if current_user.unread_notifications_count > 0 %>
            <span class="mobile-icon-badge"><%= current_user.unread_notifications_count %></span>
          <% end %>
        <% end %>
      </div>
    <% end %>

    <div id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <% if user_signed_in? %>
         <li class="nav-item active">
            <%= link_to "HOME", root_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "MAP", pages_home_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "TRAVEL BOOK", my_travel_book_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "ADD NEW PLACE", new_comment_path, class: "nav-link" %>
          </li>
          <li class="nav-item active">
            <%= link_to "PROFILE", user_path(current_user), class: "nav-link" %>
          </li>
          <li class="nav-item active desktop-nav-icon">
            <%= link_to conversations_path, class: "nav-link notification-link" do %>
              <i class="fa-regular fa-paper-plane"></i>
              <% unread_dm = current_user.unread_messages_count + current_user.pending_message_requests_count %>
              <% if unread_dm > 0 %>
                <span class="notification-badge"><%= unread_dm %></span>
              <% end %>
            <% end %>
          </li>
          <li class="nav-item active desktop-nav-icon">
            <%= link_to notifications_path, class: "nav-link notification-link" do %>
              <i class="fa-regular fa-heart"></i>
              <% if current_user.unread_notifications_count > 0 %>
                <span class="notification-badge"><%= current_user.unread_notifications_count %></span>
              <% end %>
            <% end %>
          </li>
          <% if current_user.admin? %>
            <li class="nav-item active">
              <%= link_to admin_root_path, class: "nav-link admin-link" do %>
                <i class="fa-solid fa-shield-halved"></i> ADMIN
              <% end %>
            </li>
          <% end %>
          <li class="nav-item active">
            <%= link_to "LOG OUT", destroy_user_session_path, method: :delete, data: { turbo_method: :delete }, class: "nav-link" %>
          </li>
          <li class="nav-item active" data-controller="sync-badge">
            <span class="sync-badge-container">
              <span class="sync-badge d-none" data-sync-badge-target="count">0</span>
              <span class="sync-status-icon d-none" data-sync-badge-target="icon">
                <i class="fa-solid fa-cloud-arrow-up"></i>
              </span>
            </span>
          </li>
          <li class="nav-item dropdown">
        <% else %>
          <li class="nav-item">
            <%= link_to "", new_user_session_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
