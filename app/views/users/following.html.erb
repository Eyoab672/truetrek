<div class="users-list-page">
  <div class="users-list-header">
    <%= link_to user_path(@user), class: "back-link" do %>
      <i class="fa-solid fa-arrow-left"></i>
    <% end %>
    <h1>Following</h1>
    <span class="users-count"><%= @following.count %></span>
  </div>

  <% if @following.any? %>
    <div class="users-list">
      <% @following.each do |user| %>
        <%= link_to user_path(user), class: "user-card" do %>
          <div class="user-avatar">
            <% if user.avatar.attached? %>
              <%= cl_image_tag user.avatar.key, width: 50, height: 50, crop: :fill, class: "avatar-img" %>
            <% else %>
              <div class="avatar-placeholder">
                <%= user.username&.first&.upcase || user.email.first.upcase %>
              </div>
            <% end %>
          </div>
          <div class="user-info">
            <span class="user-name"><%= user.username %></span>
            <span class="user-location"><i class="fa-solid fa-location-dot"></i> <%= user.city %></span>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <i class="fa-regular fa-user"></i>
      <p>Not following anyone yet</p>
    </div>
  <% end %>
</div>
