<div class="camera-fullscreen-page" data-place-id="<%= params[:place_id] %>">
  <!-- Close button -->
  <%= link_to :back, class: "camera-close-btn" do %>
    <i class="fa-solid fa-xmark"></i>
  <% end %>

  <!-- Camera viewfinder -->
  <div class="camera-viewfinder">
    <video id="camera-video" autoplay playsinline class="camera-video-fullscreen"></video>
    <canvas id="camera-canvas" style="display:none;"></canvas>

    <div id="photo-preview" class="camera-preview-fullscreen d-none">
      <img id="preview-image" class="camera-preview-image" alt="Photo preview">
    </div>
  </div>

  <!-- Camera controls overlay -->
  <div id="camera-controls" class="camera-controls-overlay">
    <% if params[:place_id].present? %>
      <% place = Place.find_by(id: params[:place_id]) %>
      <p class="camera-place-label"><%= place&.title || "this place" %></p>
    <% end %>
    <div class="camera-controls-bottom">
      <button type="button" id="rotate-camera" class="camera-btn-circle camera-btn-secondary">
        <i class="fa-solid fa-rotate"></i>
      </button>
      <button type="button" id="take-photo" class="camera-btn-shutter">
        <span class="shutter-inner"></span>
      </button>
      <div class="camera-btn-circle camera-btn-placeholder"></div>
    </div>
  </div>

  <!-- Action buttons after photo taken -->
  <div id="action-buttons" class="camera-action-overlay d-none">
    <div class="camera-action-buttons">
      <button type="button" class="camera-btn-action camera-btn-retake" id="retake-photo">
        <i class="fa-solid fa-xmark"></i>
      </button>
      <button type="button" class="camera-btn-action camera-btn-confirm" id="looks-great">
        <i class="fa-solid fa-check"></i>
      </button>
    </div>
  </div>
</div>
