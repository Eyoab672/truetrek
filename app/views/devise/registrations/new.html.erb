<div class="auth-page">
  <div class="auth-phone-shell">
    <div class="auth-card">
      <header class="auth-header">
        <div class="auth-title-row">
          <span class="auth-title-main">Sign Up</span>
          <span class="auth-title-slash">/</span>
          <span class="auth-title-muted">
            <%= link_to "Log In", new_session_path(resource_name), class: "auth-title-link" %>
          </span>
        </div>
        <p class="auth-subtitle">Good to see you here for the first time!</p>
      </header>

      <%= simple_form_for(resource,
                          as: resource_name,
                          url: registration_path(resource_name),
                          html: { class: "auth-form" }) do |f| %>

        <%= f.error_notification %>

        <div class="auth-field-group">
          <%= f.label :username, "Username", class: "auth-label" %>
          <%= f.input :username,
                      label: false,
                      required: true,
                      autofocus: true,
                      input_html: {
                        class: "auth-input-field",
                        placeholder: "Your display name"
                      } %>
        </div>

        <div class="auth-field-group">
          <%= f.label :city, "City", class: "auth-label" %>
          <%= f.input :city,
                      label: false,
                      required: true,
                      input_html: {
                        class: "auth-input-field",
                        placeholder: "Where are you from?"
                      } %>
        </div>

        <div class="auth-field-group">
          <%= f.label :email, "Email", class: "auth-label" %>
          <%= f.input :email,
                      label: false,
                      required: true,
                      input_html: {
                        autocomplete: "email",
                        class: "auth-input-field"
                      } %>
        </div>

        <div class="auth-field-group" data-controller="password-visibility">
          <%= f.label :password, "Password", class: "auth-label" %>

          <% if @minimum_password_length %>
            <p class="auth-hint">
              <%= @minimum_password_length %> characters minimum
            </p>
          <% end %>

          <%= f.input :password,
                      label: false,
                      required: true,
                      input_html: {
                        autocomplete: "new-password",
                        class: "auth-input-field",
                        data: { password_visibility_target: "input" }
                      } %>

          <%= f.label :password_confirmation, "Confirm password", class: "auth-label" %>
          <%= f.input :password_confirmation,
                      label: false,
                      required: true,
                      input_html: {
                        autocomplete: "new-password",
                        class: "auth-input-field",
                        data: { password_visibility_target: "input" }
                      } %>
          <div class="auth-show-password">
            <label class="auth-checkbox-label">
              <input type="checkbox" data-action="change->password-visibility#toggle">
              <span>Show password</span>
            </label>
          </div>
        </div>

        <div class="auth-actions">
          <%= f.button :submit, "Sign up", class: "auth-primary-btn" %>
        </div>
      <% end %>

      <div class="auth-divider">
        <span>or</span>
      </div>

      <div class="auth-oauth">
        <%= button_to user_google_oauth2_omniauth_authorize_path, method: :post, data: { turbo: false }, class: "auth-google-btn" do %>
          <svg class="google-icon" viewBox="0 0 24 24" width="20" height="20">
            <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
            <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
            <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
            <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
          </svg>
          Sign up with Google
        <% end %>
      </div>

    </div>
  </div>
</div>
